@model SEUS.EXCELKlase.StudentPodaci


@{
    ViewBag.Title = "Podaci o studentu!";
}

<!--Accordion-->
<link rel="stylesheet" href="~/Accordion/accordion.css" />
<!--Accordion-->

<h4>Unesi svoj jedinstveni maticni broj akademskog gradanina</h4>

@using (Html.BeginForm("WordPodaci", "Ispis", FormMethod.Get))
{
    <p>
        JMBAG: @Html.TextBox("jmbag")
        <button type="submit" class="btn btn-default">Unesite jmbag</button>
    </p>
}

<hr />

@if (ViewBag.Error != null)
{

    <div class="alert alert-danger">
        <strong>Greska kod trazenja JMBAG-a!</strong> @ViewBag.Error
    </div>
}

@if (ViewBag.Error == null && Model != null)
{


    <a href="javascript:demoFromHTML()" class="button">Run Code</a>


    <div id="docx">
        <div class="WordSection1">
            <table border="1" width="400">
                <thead>PODACI o @Model.ime @Model.prezime</thead>
                <tr>
                    <td>Ime: </td>
                    <td>@Model.ime</td>
                </tr>
                <tr>
                    <td>Prezime: </td>
                    <td>@Model.prezime</td>
                </tr>
                <tr>
                    <td>e-mail: </td>
                    <td>@Model.email</td>
                </tr>
                <tr>
                    <td>Jmbag: </td>
                    <td>@Model.jmbag</td>
                </tr>
                <tr>
                    <td>Jmbg: </td>
                    <td>@Model.jmbg</td>
                </tr>
                <tr>
                    <td>OIB: </td>
                    <td>@Model.oib</td>
                </tr>
                <tr>
                    <td>Datum rodenja: </td>
                    <td>@Model.datumrodenja</td>
                </tr>
                <tr>
                    <td>Spol: </td>
                    <td>@Model.spol</td>
                </tr>
                <tr>
                    <td>Godina zavrsetka skole: </td>
                    <td>@Model.godinazavrsetkaskole</td>
                </tr>
                <tr>
                    <td>Ime majke: </td>
                    <td>@Model.imemajke</td>
                </tr>
                <tr>
                    <td>Ime oca: </td>
                    <td>@Model.imeoca</td>
                </tr>
            </table>
        </div>
    </div>
    <br /> <br />

    <button onclick="exp2Doc();">Export</button>
    <a class="btn btn-success" onclick="window.open('mailto:test@example.com');">  Posaljite na e-mail  </a>
}

<!--Accordion-->
<script src="~/Accordion/accordion.js"></script>
<script src="~/Accordion/word.js"></script>
